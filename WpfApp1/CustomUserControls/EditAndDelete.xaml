<UserControl x:Class="WpfApp1.CustomUserControls.EditAndDelete"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.CustomUserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="260.526" d:DesignWidth="551.316">
    <Grid>
        <StackPanel Orientation="Horizontal" MaxHeight="70" MaxWidth="300">
            <Button x:Name="EditButton"
                    Background="{x:Null}" Height="Auto" 
                    Width="auto">
                <materialDesign:PackIcon Kind="Edit"  Opacity=".56" 
                                         Foreground="Gray"          
                                         Height="52" Width="52" />
            </Button>
            <Button x:Name="DeleteButton"
                    Background="{x:Null}" Height="Auto" 
                    Width="auto">
                <materialDesign:PackIcon Kind="Delete"  Opacity=".56" 
                                         Foreground="Gray"    
                                         Height="52" Width="52" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
