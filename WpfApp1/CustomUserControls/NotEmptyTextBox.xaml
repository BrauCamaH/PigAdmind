<TextBox x:Class="WpfApp1.CustomUserControls.NotEmptyTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.CustomUserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:wpfApp1="clr-namespace:WpfApp1"
             xmlns:domain="clr-namespace:WpfApp1.Domain"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             materialDesign:HintAssist.Hint="Floating Hint"
             FontSize="14" Style="{StaticResource MaterialDesignFloatingHintTextBox}" d:DesignWidth="118.5" d:DesignHeight="45">
    <TextBox.Text>
            <Binding
                Path="."
                UpdateSourceTrigger="PropertyChanged">
                <Binding.Source>
                <system:String>0</system:String>
                </Binding.Source>
            <Binding.ValidationRules>
                    <domain:NotEmptyValidationRule
                        ValidatesOnTargetUpdated="True" 
                        />
                </Binding.ValidationRules>
            </Binding>
        </TextBox.Text>
</TextBox>